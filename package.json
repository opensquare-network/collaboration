{
  "name": "collaboration",
  "version": "1.1.0",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/@collaboration/node-api",
      "**/@collaboration/node-api/**",
      "**/@collaboration/voting-server",
      "**/@collaboration/voting-server/**",
      "**/@osn/common-ui"
    ]
  },
  "repository": "git@github.com:opensquare-network/collaboration.git",
  "author": "OpenSquare <https://www.opensquare.network/>",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=15.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "devDependencies": {
    "husky": "^7.0.4",
    "lint-staged": "^12.3.4",
    "prettier": "^2.5.1",
    "pretty-quick": "^3.1.1"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "scripts": {
    "prepare": "husky install && husky set .husky/pre-commit \"npx lint-staged\"",
    "test": "yarn workspace @collaboration/voting test"
  }
}
